<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_write_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.panamiur.vieneviene.ReadWriteQR">

    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:id="@+id/txt_title_code_qr"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_code_qr"
        android:adjustViewBounds="true"
        android:id="@+id/img_qr_wd"/>


    <Button
        android:id="@+id/btn_scann_qr_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_read_write_qr_save"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:onClick="onClickCaptureQrSave"/>

    <Button
        android:id="@+id/btn_scann_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_read_write_qr"
        android:layout_above="@id/btn_scann_qr_save"
        android:layout_marginBottom="10dp"
        android:onClick="onClickCaptureQr"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:id="@+id/txt_title_scan_qr"
        android:layout_above="@+id/btn_scann_qr"
        />

</RelativeLayout>
